.list-item {
    margin-top: 20rpx;
    border-radius: 12rpx;
    background-color: #fff;
    overflow: hidden;
    transition: all 0.2s;
}

.item-content {
    display: flex;
    text-align: left;
    padding: 24rpx 0;
}

.item-content .thumb {
    padding: 0 24rpx;
    flex: 6;
}

.item-content .thumb image {
    width: 100%;
    max-height: 170rpx;
}

.item-content .title {
    box-sizing: border-box;
    margin-right: 24rpx;
    flex: 8;
    font-size: 44rpx;
    max-height: 170rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.item-content .btn {
    text-align: center;
    padding: 0 20rpx;
    background: red;
    color: #fff;
    vertical-align: center;
    letter-spacing: 12rpx;
    writing-mode: vertical-lr;
    border-radius: 0;
}

.hover-delete {
    opacity: 0.6;
}

button {
    padding: 0;
    margin: -24rpx 0;
}

.container {
    box-sizing: border-box;
    border: 1px solid transparent;
    padding: 0 20rpx;
}