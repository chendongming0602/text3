.swiper-itme-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
}

.swiper-itme-wrapper image {
    width: 100%;
}

.swiper-itme-wrapper .desc {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 18rpx 27rpx;
    color: #fff;
    background: rgba(0,0,0,0.6);
    line-height: 1.5;
    font-size: 48rpx;
}