.tab-card {
    display: flex;
    width: 100%;
    height: 92rpx;
    font-size: 32rpx;
    line-height: 92rpx;
    background: #fff;
    border-radius: 92rpx;
}

.tab-item {
    height: inherit;
    border-radius: inherit;
    flex: 1;
    background: #fff;
    text-align: center;
}

.tab-item.on {
    background: #5179ee;
    color: #fff;
}