swiper {
    width: 100%;
}

.main {
    box-sizing: border-box;
    background: #e6e6e6;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 18rpx;
}

.close {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background: rgb(104,104,104);
    color: white;
    text-align: center;
    line-height: 50rpx;
    flex-shrink: 0;
}

.close image {
    width: 50rpx;
    height: 50rpx;
}

.body {
    display: flex;
    flex: 1;
    justify-content: space-between;
    align-items: center;
}

.img {
    margin: 0 20rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
}

.img image {
    width: 80rpx;
}

.txt {
    width: 356rpx;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 25.2rpx;
    color: rgb(135,135,135);
}

.message button {
    font-size: 14px;
    white-space: nowrap;
    color: rgb(61,127,26);
    border: 2rpx solid rgb(61,127,26);
    padding: 6rpx 10rpx;
    border-radius: 8rpx;
}