.aside-btn-column {
    position: fixed;
    z-index: 9999;
}

.aside-btn-column .col-item {
    position: relative;
    margin-top: 30rpx;
}

.aside-btn-column .col-item button {
    position: absolute;
    width: 100%;
    height: 100%;
    background: transparent;
    padding: 0;
}

.aside-btn-column .col-item:first-child {
    margin-top: 0;
}

.right {
    right: 0;
}

.left {
    left: 0;
}

.col-item image {
    width: 100rpx;
}